<Project>
    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
        <LangVersion>10.0</LangVersion>
        <NoWarn>1591</NoWarn>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>
    <PropertyGroup>
        <VersionPrefix>7.0.1</VersionPrefix>
        <Authors>Rafael Miranda</Authors>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>A .NET library to create message consumers.</Description>
        <RepositoryUrl>https://github.com/rafaelpadovezi/Ziggurat</RepositoryUrl>
        <PackageIcon>icon.png</PackageIcon>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>
    <ItemGroup>
        <None Include="..\..\docs\icon.png" Pack="true" PackagePath=""/>
    </ItemGroup>
</Project>